{
  "extends": "@tsconfig/recommended/tsconfig.json",

  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "removeComments" : true,
    "baseUrl": ".",
    "paths": {
      "@obsinflate/tests/*": [
        "__tests__/*"
      ],
      "@obsinflate/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src",
    "__tests__"
  ]
}
