{
  "name": "obsinflate",
  "version": "0.3.0",
  "description": "TypeScript framework that allows building extension scripts for Obsidian plugins.",
  "scripts": {
    "clean": "rimraf ./dist && rimraf ./bundles",
    "clear": "npm run clean && rimraf ./package-lock.json && rimraf ./node_modules",
    "build": "npm run clean && npm run format && npm run lint && npx tsc --project tsconfig.build.json",
    "rebuild": "npm run clear && npm install && npm run build",
    "lint": "eslint ./src/ && eslint ./__tests__/",
    "format": "prettier --write ./src/ ./__tests__/ ./*.js ./*.json",
    "format:check": "prettier --check ./src/ ./__tests__/ ./*.js ./*.json",
    "build:for:jest": "npm run clean && npx tsc --project tsconfig.build.for.jest.json",
    "test:unit": "npm run build:for:jest && jest",
    "test:integration:quickadd": "rimraf ./vaults/quick-add/scripts && ncp ./bundles/QuickAdd ./vaults/quick-add/scripts && start obsidian://open?vault=quick-add",
    "test:integration:userplugins": "rimraf ./vaults/user-plugins/scripts && ncp ./bundles/UserPlugins ./vaults/user-plugins/scripts && start obsidian://open?vault=user-plugins",
    "test:integration:dv": "rimraf ./vaults/dataview/scripts && ncp ./bundles/dv ./vaults/dataview/scripts && start obsidian://open?vault=dataview",
    "bundle:dv": "",
    "bundle:quickadd": "",
    "bundle:userplugins": "npx webpack --config webpack.userplugins.config.js",
    "bundle": "rimraf ./bundles && npm run bundle:quickadd && npm run bundle:dv && npm run bundle:userplugins",
    "bundle:quickadd:helloworld": "npx webpack --config webpack.quickadd.helloworld.config.js",
    "bundle:userplugins:helloworld": "npx webpack --config webpack.userplugins.helloworld.config.js",
    "bundle:dv:helloworld": "npx webpack --config webpack.dv.view.helloworld.config.js && node dv.view.build.js HelloWorld",
    "bundle:helloworld": "rimraf ./bundles && npm run bundle:quickadd:helloworld && npm run bundle:userplugins:helloworld && npm run bundle:dv:helloworld",
    "deploy:test": "ncp ./bundles c:/Temp/obsidian"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/petitpandarouge/ObsidianScripts.git"
  },
  "keywords": [
    "obsidian",
    "dataview",
    "quickadd",
    "userplugins"
  ],
  "author": "Damien Port√©",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/petitpandarouge/ObsidianScripts/issues"
  },
  "homepage": "https://github.com/petitpandarouge/ObsidianScripts#readme",
  "devDependencies": {
    "@eslint/js": "^9.11.0",
    "@tsconfig/recommended": "^1.0.6",
    "@types/chance": "^1.1.6",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.12",
    "@types/luxon": "^3.4.2",
    "chance": "^1.1.11",
    "eslint": "^9.11.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "luxon": "^3.5.0",
    "mergician": "^2.0.2",
    "ncp": "^2.0.0",
    "obsidian": "^1.7.2",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.7",
    "string-replace-loader": "^3.1.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths-jest": "^0.0.1",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.6.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
